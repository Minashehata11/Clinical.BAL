@model IEnumerable<PatientViewModel>

<h1>All Patients</h1>
<br />


<form asp-action="Index" asp-controller="Admin">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search.." name="name" class="form-control" />
        </div>

        <div class="col-sm-4">
            <input type="submit" value="search" class="btn btn-success btn-block" />
        </div>

    </div>

</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Name</th>


                @*  <th scope="col">Image</th>*@
                <th scope="col">Adrdress</th>

                <th scope="col">Email</th>

               




            </tr>
        </thead>

        @foreach (var doctor in Model)
        {
            <tbody class="table-group-divider">
                <tr>

                    <td>@doctor.Username</td>
                    @*<td>
            <img src="~/Files/Images/@emp.ImageUrl" class="img-circle" hight="40" width="40" alt="Employee">
            </td>*@


                    <td>@doctor.Address</td>
                    <td>@doctor.Email</td>


                 


                </tr>

            </tbody>
        }


    </table>
}
else
{
    <div class="alert alert-warning">
        <h3> NO Departemnts Found ..!  </h3>
    </div>
}

