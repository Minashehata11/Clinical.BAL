@model ChangePassword


<div class="container">
    <h1>Change Password</h1>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="ChangePassword" asp-controller="Doctor" enctype="multipart/form-data">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label asp-for="@Model.OldPassword" class="col-form-label">Current Password:</label>
                    <input class="form-control" type="password" asp-for="@Model.OldPassword" placeholder="Current Password" required>
                    <span asp-validation-for="@Model.OldPassword"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Password" class="col-form-label">New Password:</label>
                    <input class="form-control" type="password" asp-for="@Model.Password" placeholder="New Password" required>
                    <span asp-validation-for="@Model.Password"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.ConfirmedPassword" class="col-form-label">Confirm New Password:</label>
                    <input class="form-control" type="password" asp-for="@Model.ConfirmedPassword" placeholder="Confirm New Password" required>
                    <span asp-validation-for="@Model.ConfirmedPassword"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

